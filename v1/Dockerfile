    pnpm config set strict-ssl false

# å®‰è£…ä¾èµ– (pnpm ä½¿ç”¨ç¡¬é“¾æ¥ï¼Œé€Ÿåº¦æ›´å¿«)
RUN pnpm install --shamefully-hoist --ignore-scripts

# æ‰‹åŠ¨è¿è¡Œå¿…è¦çš„ setup
RUN npx max setup || true

# å¤åˆ¶æºä»£ç 
COPY . .

# ğŸ” è°ƒè¯•ï¼šåˆ—å‡ºå¤åˆ¶çš„æ–‡ä»¶ï¼Œæ£€æŸ¥æ˜¯å¦åŒ…å«åç«¯ä»£ç 
RUN echo "=== æ£€æŸ¥å¤åˆ¶çš„æ–‡ä»¶ ===" && \
    ls -la && \
    echo "=== æ£€æŸ¥ src ç›®å½• ===" && \
    ls -la src/ && \
    echo "=== æ£€æŸ¥æ˜¯å¦æœ‰ controllers (ä¸åº”è¯¥å­˜åœ¨) ===" && \
    (ls -la src/controllers/ 2>/dev/null || echo "âœ… æ­£å¸¸ï¼šsrc/controllers ä¸å­˜åœ¨") && \
