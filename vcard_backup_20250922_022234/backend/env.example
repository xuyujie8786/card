# Database
DATABASE_URL="postgresql://username:password@localhost:5432/vcard_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# API Keys
CARD_PROVIDER_API_URL="https://api.cardprovider.com"
CARD_PROVIDER_API_KEY="your-card-provider-api-key"
CARD_PROVIDER_AES_KEY="your-32-character-aes-key-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"
